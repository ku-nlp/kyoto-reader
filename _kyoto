#compdef kyoto
#
# this is zsh completion function file.
# generated by genzshcomp(ver: 0.6.0)
#

local context state line

_kyoto_commands() {
  local -a subcmds
  subcmds=(
    'configure:create Makefile for corpus preprocessing' \
    'show:show corpus content in a tree format' \
    'list:list document IDs' \
    'ls:list document IDs' \
    'idsplit:split corpus following ID files' \
  )
  _describe -t commands "subcommand" subcmds
}


_kyoto() {
  typeset -A opt_args

  _arguments -s -S -C \
    "-h[show this help message and exit]:" \
    "--help[show this help message and exit]:" \
    '1: :_kyoto_commands' \
    '*:: :->command_args'

  case $state in
    command_args)
      case $words[1] in
        configure)
          _arguments \
            '--corpus-dir[path to directory where downloaded corpus files exist]:' \
            '(-c --corpus-dir)'{-c,--corpus-dir}':filename:_files'
        ;;

        show)
          _arguments \
          '1: :_files' \
           '--cases[target cases separated by " " (default: all cases)]:'
        ;;

        list)
          _arguments \
            '1: :_files'
        ;;

        idsplit)
          _arguments \
            '--cases[target cases separated by " " (default: all cases)]:'
        ;;
      esac
    ;;
  esac
}

_kyoto "$@"
